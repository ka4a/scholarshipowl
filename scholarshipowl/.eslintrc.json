{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-undef": "error",
        "no-useless-escape": "off",
        "no-console": "warn",

        "vue/require-v-for-key": "error",
        "vue/no-unused-vars": "error",
        "vue/no-parsing-error": "error",
        "vue/valid-v-on": "error"
    }
}